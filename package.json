{
  "name": "open-trail-map-styles",
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "live-server": "^1.2.2",
    "mapbox-gl-style-build": "https://github.com/mizmay/mapbox-gl-style-build",
    "maperture": "https://github.com/mizmay/maperture",
    "nodemon": "^3.1.9"
  },
  "scripts": {
    "maperture-update": "rm -rf maperture/dist && cp -r node_modules/maperture/dist maperture/dist",
    "maperture-init-local-configs": "cp node_modules/maperture/public/config/local.example.js maperture/local.js",
    "maperture-start": "yarn live-server --port=8888 --cors --entry-file=maperture/index.html --open=maperture --host=localhost ./",
    "build-styles": "nodemon --watch templates --ext js --exec 'yarn mapbox-gl-style-build --style-dir=styles/variants --layer-dir=styles/layers --out-dir=build -v'"
  }
}
